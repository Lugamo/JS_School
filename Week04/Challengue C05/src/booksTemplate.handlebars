{{!-- {{display the book template depending on the numbers of elements in the json file}} --}}
{{#each this}}
  <div class="Book tooltip">
    <div class="image-container">
        <img class="cover" src={{image-link}} alt={{tittle}}>
        <button class="btn-read"><i class="fas fa-book-open"></i></button>
        {{#if lend.bool}}
          <img src="../assets/images/lend-mark.png" class="lend-mark" >
          <img class="lend-mark-back" src="../assets/images/lend-mark-back.png">
        {{/if}}
    </div>
    <p class="book-name">{{tittle}}</p>
    <p class="author-name">{{author}}</p>
    <p class="stars">
    {{#getRating rating}}
      {{{this}}}
    {{/getRating}}
    </p>

    {{!-- {{for the detail tooltip}} --}}
    <div class="tooltiptext">
        <h1>{{tittle}}</h1>
        <span class="year">{{year}}</span>
        <p>Novel by <span class="author">{{author}}</span></p>
        <p>{{pages}} pages</p>
        <h2>Summary</h2>
        <p>{{summary}}</p>
        <h2>Rating</h2>
        {{#getRating rating}}
          {{{this}}}
        {{/getRating}}
        {{#if lend.bool}}
          <button class="btn-dont-lend" id={{id}}>Dont Lend</button>
        {{else}}
          <button class="btn-lend" id={{id}}>Lend</button>
        {{/if}}
    </div>

  </div>
{{/each}}
